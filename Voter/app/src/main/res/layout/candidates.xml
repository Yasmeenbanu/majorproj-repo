<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    tools:context=".CandidatesActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <ImageView
            android:id="@+id/img_candidates"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_account_box_black_24dp"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/edt_candidatename"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="Candidate Name"
            android:paddingLeft="18dp"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3" />


        <Spinner
            android:id="@+id/candidate_state_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp" />

        <Spinner
            android:id="@+id/candidate_district_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/edt_taluk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="Taluk"
            android:paddingLeft="18dp"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3" />

        <EditText
            android:id="@+id/edt_party"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="Party"
            android:paddingLeft="18dp"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3" />

        <EditText
            android:id="@+id/edt_mobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:paddingLeft="18dp"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3" />

        <EditText
            android:id="@+id/edt_adhaar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="Adhaar Number"
            android:paddingLeft="18dp"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3" />

        <Button
            android:id="@+id/btn_add_candidates"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#03dbfc"
            android:text="Add"
            android:textColor="#ffffff" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>