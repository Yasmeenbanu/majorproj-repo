<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnr_ele_res"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"

    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_candidate1"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:fontFamily="sans-serif"
           android:layout_marginTop="15dp"
            android:paddingEnd="1dp"
            android:textColor="#A9A9A9"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_er_count"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:layout_marginRight="10dp"

            android:paddingStart="10dp"
            android:paddingEnd="1dp"
            android:textColor="#000000"
            android:textSize="60sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:fontFamily="sans-serif"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"


            android:text="ElectionResult_id"
            android:textColor="#000000"
            android:textSize="20sp" />



        <TextView
            android:id="@+id/txt_er_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="sans-serif"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:hint="ElectionResult_id"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:fontFamily="sans-serif"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"

            android:text="CandidateID"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_candidate_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:hint="Candidate_id  "
            android:paddingStart="10dp"
            android:paddingEnd="1dp"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:fontFamily="sans-serif"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"

            android:text="Candidate Name"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_candidate_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="sans-serif"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:hint="candidates_name"
            android:paddingStart="10dp"
            android:paddingEnd="1dp"
            android:textColor="#000000"
            android:textSize="20sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"/>
</LinearLayout>


