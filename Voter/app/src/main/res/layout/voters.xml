<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    tools:context=".VoterActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/edt_votername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="Voter Name"
            android:paddingLeft="18dp"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3" />


        <Spinner

            android:id="@+id/spn_state"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp" />

        <Spinner
            android:id="@+id/spn_district"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp" />

        <EditText
            android:id="@+id/edt_taluk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="Taluk"
            android:paddingLeft="18dp"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3" />
        <EditText
            android:id="@+id/edt_mobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:paddingLeft="18dp"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3" />
        <EditText
            android:id="@+id/edt_adhaar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="Adhaar Number"
            android:paddingLeft="18dp"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3" />
        <TextView
            android:id="@+id/txt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:hint="Password"
            android:paddingLeft="18dp"
            android:textColor="#000000"
            android:textColorHint="#d3d3d3" />
        <Button
            android:id="@+id/btn_add_voter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="Add"
            android:background="#03dbfc"
            android:textColor="#ffffff" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>